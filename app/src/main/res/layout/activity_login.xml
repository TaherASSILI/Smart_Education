<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.smart_education.LoginActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="289dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:background="@drawable/img1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.27" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:drawableLeft="@drawable/ic_shortcut_email"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_weight="0.27" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Mot de passe"
        android:drawableLeft="@drawable/ic_shortcut_lock_open"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="0.27" />

    <Button
        android:text="Se connecter"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:onClick="Se_connecter"
        android:id="@+id/button"
        android:layout_weight="0.10" />

    <TextView
        android:text="Pas un membre? S'inscrire maintenant."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:onClick="Inscrire"
        android:id="@+id/textView"
        android:layout_weight="0.27" />

</LinearLayout>
